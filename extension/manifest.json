{
  "manifest_version": 3,
  "name": "Indeed.ca Auto Apply Assistant",
  "version": "1.0.0",
  "description": "Automated job application assistant for Indeed.ca with ATS-friendly resume tailoring",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://ca.indeed.com/*",
    "https://indeed.ca/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://ca.indeed.com/*",
        "https://indeed.ca/*"
      ],
      "js": ["content/indeed-automation.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_title": "Indeed Auto Apply",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://ca.indeed.com/*", "https://indeed.ca/*"]
    }
  ]
}